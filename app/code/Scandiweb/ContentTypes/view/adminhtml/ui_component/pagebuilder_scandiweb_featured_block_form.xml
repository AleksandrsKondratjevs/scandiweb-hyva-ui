<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_scandiweb_featured_block_form.pagebuilder_scandiweb_featured_block_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Scandiweb Featured Block</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_scandiweb_featured_block_form.pagebuilder_scandiweb_featured_block_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_scandiweb_featured_block_form</namespace>
    </settings>
    <dataSource name="pagebuilder_scandiweb_featured_block_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_scandiweb_featured_block_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="0" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Type</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceScandiwebFeaturedBlock"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="featured_block_content" sortOrder="10">
        <settings>
            <label translate="true">Content</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="content_title" sortOrder="10" formElement="wysiwyg" template="ui/form/field">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="fit" xsi:type="boolean">false</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="toggle_button" xsi:type="boolean">false</item>
                        <item name="height" xsi:type="string">20px</item>
                        <item name="add_variables" xsi:type="boolean">false</item>
                        <item name="add_widgets" xsi:type="boolean">false</item>
                        <item name="add_images" xsi:type="boolean">false</item>
                        <item name="add_directives" xsi:type="boolean">false</item>
                        <item name="dynamic_id" xsi:type="boolean">true</item>
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label>Title</label>
                <dataScope>content_title</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <rows>1</rows>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="content_description" sortOrder="20" formElement="wysiwyg" template="ui/form/field">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="fit" xsi:type="boolean">false</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="toggle_button" xsi:type="boolean">false</item>
                        <item name="height" xsi:type="string">20px</item>
                        <item name="add_variables" xsi:type="boolean">false</item>
                        <item name="add_widgets" xsi:type="boolean">false</item>
                        <item name="add_images" xsi:type="boolean">false</item>
                        <item name="add_directives" xsi:type="boolean">false</item>
                        <item name="dynamic_id" xsi:type="boolean">true</item>
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label>Description</label>
                <dataScope>content_description</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <rows>1</rows>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="show_first_cta" sortOrder="30" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">show</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Show CTA Button</label>
                <dataScope>show_first_cta</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">show</item>
                                <item name="label" xsi:type="string" translate="true">Show</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">never</item>
                                <item name="label" xsi:type="string" translate="true">Disable</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="first_cta_text" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never</item>
                    </item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_first_cta:value</link>
                </imports>
                <label translate="true">CTA Text</label>
                <dataType>text</dataType>
                <dataScope>first_cta_text</dataScope>
            </settings>
        </field>
        <field name="first_cta_link" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never</item>
                    </item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_first_cta:value</link>
                </imports>
                <label translate="true">CTA Link</label>
                <dataType>text</dataType>
                <dataScope>first_cta_link</dataScope>
            </settings>
        </field>
        <field name="first_cta_type" sortOrder="60" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">pagebuilder-button-primary</item>
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never</item>
                    </item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_first_cta:value</link>
                </imports>
                <dataType>text</dataType>
                <label translate="true">CTA Type</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">btn btn-primary</item>
                                <item name="label" xsi:type="string" translate="true">Primary</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">btn btn-secondary</item>
                                <item name="label" xsi:type="string" translate="true">Secondary</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">btn</item>
                                <item name="label" xsi:type="string" translate="true">Tritical</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="show_second_cta" sortOrder="70" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">never</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Show Second CTA Button</label>
                <dataScope>show_second_cta</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">show</item>
                                <item name="label" xsi:type="string" translate="true">Show</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">never</item>
                                <item name="label" xsi:type="string" translate="true">Disable</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="second_cta_text" sortOrder="80" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Second CTA Text</label>
                <dataType>text</dataType>
                <dataScope>second_cta_text</dataScope>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_second_cta:value</link>
                </imports>
            </settings>
        </field>
        <field name="second_cta_link" sortOrder="90" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Second CTA Link</label>
                <dataScope>second_cta_link</dataScope>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_second_cta:value</link>
                </imports>
            </settings>
        </field>
        <field name="second_cta_type" sortOrder="100" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">pagebuilder-button-primary</item>
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Second CTA Type</label>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_second_cta:value</link>
                </imports>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">btn btn-primary</item>
                                <item name="label" xsi:type="string" translate="true">Primary</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">btn btn-secondary</item>
                                <item name="label" xsi:type="string" translate="true">Secondary</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">btn</item>
                                <item name="label" xsi:type="string" translate="true">Tritical</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="featured_block_visual" sortOrder="20">
        <settings>
            <label translate="true">Visual</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="visual_content_position" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">left</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Visual Content Position</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">left</item>
                                <item name="label" xsi:type="string" translate="true">Left</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">right</item>
                                <item name="label" xsi:type="string" translate="true">Right</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="visual_content_img" formElement="imageUploader" sortOrder="20">
            <settings>
                <label translate="true">Image</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
    </fieldset>
</form>