<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_scandiweb_featured_categories_grid_form.pagebuilder_scandiweb_featured_categories_grid_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Scandiweb Featured categories</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_scandiweb_featured_categories_grid_form.pagebuilder_scandiweb_featured_categories_grid_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_scandiweb_featured_categories_grid_form</namespace>
    </settings>
    <dataSource name="pagebuilder_scandiweb_featured_categories_grid_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_scandiweb_featured_categories_grid_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="0" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Type</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceScandiwebFeaturedCategories"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="featured_categories_data" sortOrder="10">
        <settings>
            <label translate="true">Main</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="title" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Title</label>
                <dataType>text</dataType>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="sub_title" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Subtitle</label>
                <dataType>text</dataType>
                <dataScope>sub_title</dataScope>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="sections_data" sortOrder="20">
        <settings>
            <label translate="true">Sections</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <dynamicRows name="categories_sections">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Scandiweb_ContentTypes/js/helper/dynamic-rows-override</item>
                </item>
            </argument>
            <settings>
                <columnsHeader>false</columnsHeader>
                <addButtonLabel translate="true">Add Section</addButtonLabel>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-label-left">true</class>
                </additionalClasses>
                <dndConfig>
                    <param name="enabled" xsi:type="boolean">false</param>
                </dndConfig>
                <componentType>dynamicRows</componentType>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                    </item>
                </argument>
                <field name="section_title" formElement="input" sortOrder="10">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="fit" xsi:type="boolean">false</item>
                        </item>
                    </argument>
                    <settings>
                        <validation>
                            <rule name="required-entry" xsi:type="boolean">true</rule>
                        </validation>
                        <dataType>text</dataType>
                        <label>Title</label>
                        <labelVisible>true</labelVisible>
                    </settings>
                </field>
                <field name="section_img" formElement="imageUploader" sortOrder="20">
                    <settings>
                        <validation>
                            <rule name="required-entry" xsi:type="boolean">true</rule>
                        </validation>
                        <label translate="true">Image</label>
                        <componentType>imageUploader</componentType>
                    </settings>
                    <formElements>
                        <imageUploader>
                            <settings>
                                <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                                <maxFileSize>4194304</maxFileSize>
                                <uploaderConfig>
                                    <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                                </uploaderConfig>
                                <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                            </settings>
                        </imageUploader>
                    </formElements>
                </field>
                <field name="condition_option" sortOrder="25" formElement="select" component="Magento_PageBuilder/js/form/element/condition-options">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Url Type</label>
                        <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                        <exports>
                            <link name="category_idVisible">${$.parentName}.category_id:visible</link>
                            <link name="custom_urlVisible">${$.parentName}.custom_url:visible</link>
                        </exports>
                        <dataScope>condition_option</dataScope>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options>
                                    <option name="0" xsi:type="array">
                                        <item name="size" xsi:type="string">small</item>
                                        <item name="value" xsi:type="string">category_id</item>
                                        <item name="title" xsi:type="string" translate="true">Category</item>
                                    </option>
                                    <option name="1" xsi:type="array">
                                        <item name="size" xsi:type="string">small</item>
                                        <item name="value" xsi:type="string">custom_url</item>
                                        <item name="title" xsi:type="string" translate="true">Custom Url</item>
                                    </option>
                                </options>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <field name="category_id" component="Magento_Catalog/js/components/new-category" sortOrder="30" formElement="select">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="filterOptions" xsi:type="boolean">true</item>
                            <item name="multiple" xsi:type="boolean">false</item>
                            <item name="showCheckbox" xsi:type="boolean">false</item>
                            <item name="disableLabel" xsi:type="boolean">true</item>
                            <item name="levelsVisibility" xsi:type="number">1</item>
                        </item>
                    </argument>
                    <settings>
                        <visible>false</visible>
                        <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                        <label translate="true">Category</label>
                        <dataScope>category_id</dataScope>
                        <componentType>field</componentType>
                        <links>
                            <link name="visible">type:value</link>
                        </links>
                        <validation>
                            <rule name="required-entry" xsi:type="boolean">true</rule>
                        </validation>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Magento\Catalog\Ui\Component\Product\Form\Categories\Options"/>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <field name="custom_url" sortOrder="40" formElement="input">
                    <settings>
                        <visible>false</visible>
                        <label translate="true">Custom Url</label>
                        <dataType>text</dataType>
                        <dataScope>custom_url</dataScope>
                        <validation>
                            <rule name="required-entry" xsi:type="boolean">true</rule>
                            <rule name="validate-string" xsi:type="boolean">true</rule>
                        </validation>
                        <links>
                            <link name="visible">type:value</link>
                        </links>
                    </settings>
                </field>
                <actionDelete template="Magento_Backend/dynamic-rows/cells/action-delete">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="fit" xsi:type="boolean">false</item>
                        </item>
                    </argument>
                    <settings>
                        <dataType>text</dataType>
                        <label>Delete</label>
                        <componentType>actionDelete</componentType>
                    </settings>
                </actionDelete>
            </container>
        </dynamicRows>
    </fieldset>
</form>