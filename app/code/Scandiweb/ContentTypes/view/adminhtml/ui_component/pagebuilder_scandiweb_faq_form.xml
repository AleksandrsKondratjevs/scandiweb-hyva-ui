<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_scandiweb_faq_form.pagebuilder_scandiweb_faq_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Scandiweb FAQ</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_scandiweb_faq_form.pagebuilder_scandiweb_faq_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_scandiweb_faq_form</namespace>
    </settings>
    <dataSource name="pagebuilder_scandiweb_faq_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_scandiweb_faq_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="0" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Type</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceScandiwebFAQ"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="faq_data" sortOrder="10">
        <settings>
            <label translate="true">Main</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="faq_tab_name" sortOrder="30" formElement="input">
            <settings>
                <label translate="true">FAQ Tab Name</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <dataScope>faq_tab_name</dataScope>
                <notice translate="true">In case of FAQ is inside of multiple FAQ tabs, this field will be used as name of tab.</notice>
            </settings>
        </field>
        <field name="title" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Title</label>
                <dataType>text</dataType>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="sub_title" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Subtitle</label>
                <dataType>text</dataType>
                <dataScope>sub_title</dataScope>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="sections_data" sortOrder="20">
        <settings>
            <label translate="true">Sections</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <dynamicRows name="faq_sections">
            <settings>
                <columnsHeader>false</columnsHeader>
                <addButtonLabel translate="true">Add Section</addButtonLabel>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-label-left">true</class>
                </additionalClasses>
                <dndConfig>
                    <param name="enabled" xsi:type="boolean">false</param>
                </dndConfig>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                    </item>
                </argument>
                <field name="section_title" formElement="input" sortOrder="10">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="fit" xsi:type="boolean">false</item>
                        </item>
                    </argument>
                    <settings>
                        <validation>
                            <rule name="required-entry" xsi:type="boolean">true</rule>
                        </validation>
                        <dataType>text</dataType>
                        <label>Title</label>
                        <labelVisible>true</labelVisible>
                    </settings>
                </field>
                <field name="section_content" sortOrder="20" formElement="wysiwyg" template="ui/form/field">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="fit" xsi:type="boolean">false</item>
                            <item name="wysiwygConfigData" xsi:type="array">
                                <item name="toggle_button" xsi:type="boolean">false</item>
                                <item name="height" xsi:type="string">50px</item>
                                <item name="add_variables" xsi:type="boolean">true</item>
                                <item name="add_widgets" xsi:type="boolean">true</item>
                                <item name="add_images" xsi:type="boolean">true</item>
                                <item name="add_directives" xsi:type="boolean">true</item>
                                <item name="dynamic_id" xsi:type="boolean">true</item>
                                <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                            </item>
                        </item>
                    </argument>
                    <settings>
                        <label>Section Content</label>
                    </settings>
                    <formElements>
                        <wysiwyg>
                            <settings>
                                <rows>8</rows>
                                <wysiwyg>true</wysiwyg>
                            </settings>
                        </wysiwyg>
                    </formElements>
                </field>
                <field name="section_sort_order" sortOrder="30" formElement="input">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="default" xsi:type="string">10</item>
                        </item>
                    </argument>
                    <settings>
                        <dataType>number</dataType>
                        <label translate="true">Section position</label>
                        <dataScope>section_sort_order</dataScope>
                        <notice translate="true">The higher the number, the lower the section will appear in the list.</notice>
                    </settings>
                </field>
                <actionDelete template="Magento_Backend/dynamic-rows/cells/action-delete">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="fit" xsi:type="boolean">false</item>
                        </item>
                    </argument>
                    <settings>
                        <dataType>text</dataType>
                        <label>Delete</label>
                        <componentType>actionDelete</componentType>
                    </settings>
                </actionDelete>
            </container>
        </dynamicRows>
    </fieldset>
</form>