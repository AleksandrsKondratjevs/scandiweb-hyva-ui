<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_scandiweb_featured_products_form.pagebuilder_scandiweb_featured_products_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Map</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_scandiweb_featured_products_form.pagebuilder_scandiweb_featured_products_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_scandiweb_featured_products_form</namespace>
    </settings>
    <dataSource name="pagebuilder_scandiweb_featured_products_form_data_source" component="Magento_PageBuilder/js/form/provider">
        <dataProvider name="pagebuilder_scandiweb_featured_products_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="20" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceScandiwebFeaturedProducts" />
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="main" sortOrder="10">
        <settings>
            <label translate="true">Main</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="title" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Title</label>
                <dataType>text</dataType>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="sub_title" sortOrder="20" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Subtitle</label>
                <visible>true</visible>
                <dataScope>sub_title</dataScope>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="is_show_all_enabled" sortOrder="30" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">true</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Enable Show all button</label>
                <dataType>boolean</dataType>
                <dataScope>is_show_all_enabled</dataScope>
                <notice translate="true">Enabling this setting will show button which will redirect to selected tab url</notice>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="general" sortOrder="20">
        <settings>
            <label/>
        </settings>
        <modal name="featured_products_tab_modal">
            <settings>
                <options>
                    <option name="title" xsi:type="string" translate="true">Add Tab</option>
                </options>
            </settings>
            <insertForm name="featured_products_tab_insert_form" component="Scandiweb_ContentTypes/js/form/components/featured-products-insert-form">
                <settings>
                    <toolbarContainer>${ $.parentName }</toolbarContainer>
                    <renderUrl path="mui/index/render_handle">
                        <param name="buttons">1</param>
                        <param name="handle">pagebuilder_scandiweb_featured_products_tab_form</param>
                    </renderUrl>
                    <externalProvider>${ $.ns}.pagebuilder_scandiweb_featured_products_tab_form_data_source</externalProvider>
                    <ns>pagebuilder_scandiweb_featured_products_tab_form</ns>
                </settings>
            </insertForm>
        </modal>
        <container name="add_tab" sortOrder="10" template="ui/form/components/complex">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="content" xsi:type="string"/>
                    <item name="label" xsi:type="string"/>
                </item>
            </argument>
            <button name="add_tab_button">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="actions" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="targetName" xsi:type="string">index=featured_products_tab_insert_form</item>
                                <item name="actionName" xsi:type="string">destroyInserted</item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="targetName" xsi:type="string">index=featured_products_tab_modal</item>
                                <item name="actionName" xsi:type="string">openModal</item>
                            </item>
                            <item name="2" xsi:type="array">
                                <item name="targetName" xsi:type="string">index=featured_products_tab_insert_form</item>
                                <item name="actionName" xsi:type="string">render</item>
                            </item>
                        </item>
                    </item>
                </argument>
                <settings>
                    <title translate="true">Add Tab</title>
                </settings>
            </button>
        </container>
        <dynamicRows name="tabs" sortOrder="20" component="Scandiweb_ContentTypes/js/form/components/featured-products-dynamic-rows" template="Magento_PageBuilder/form/components/dynamic-rows/edit-form-on-click-grid">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="insertFormProvider" xsi:type="string">index = featured_products_tab_insert_form</item>
                    <item name="modalProvider" xsi:type="string">index=featured_products_tab_modal</item>
                    <item name="emptyContentPlaceholder" xsi:type="string">No tabs found. Click "Add Tab"</item>
                </item>
            </argument>
            <settings>
                <dndConfig>
                    <param name="enabled" xsi:type="boolean">false</param>
                </dndConfig>
                <identificationProperty>record_id</identificationProperty>
                <addButton>false</addButton>
                <visible>true</visible>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <componentType>dynamicRows</componentType>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                    </item>
                </argument>
                <field name="title" component="Magento_Ui/js/form/element/text" template="Magento_PageBuilder/dynamic-rows/element/text" formElement="input">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Title</label>
                        <visible>true</visible>
                        <dataScope>title</dataScope>
                        <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                    </settings>
                </field>
                <field name="tab_sort_order" component="Magento_Ui/js/form/element/text" template="Magento_PageBuilder/dynamic-rows/element/text" formElement="input">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Sort order</label>
                        <visible>true</visible>
                        <dataScope>tab_sort_order</dataScope>
                        <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                    </settings>
                </field>
                <field name="condition_option" component="Magento_Ui/js/form/element/text" template="Magento_PageBuilder/dynamic-rows/element/text" formElement="input">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Condition type</label>
                        <visible>true</visible>
                        <dataScope>condition_option</dataScope>
                        <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                    </settings>
                </field>
                <field name="url" component="Magento_Ui/js/form/element/text" template="Magento_PageBuilder/dynamic-rows/element/text" formElement="input">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Url</label>
                        <visible>true</visible>
                        <dataScope>url</dataScope>
                        <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                    </settings>
                </field>
                <field name="sort_order" component="Magento_Ui/js/form/element/text" template="Magento_PageBuilder/dynamic-rows/element/text" formElement="input">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Products sort order</label>
                        <visible>true</visible>
                        <dataScope>sort_order</dataScope>
                        <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                    </settings>
                </field>
                <field name="products_count" component="Magento_Ui/js/form/element/text" template="Magento_PageBuilder/dynamic-rows/element/text" formElement="input">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Products to display</label>
                        <visible>true</visible>
                        <dataScope>products_count</dataScope>
                        <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                    </settings>
                </field>
                <button name="actions" component="Magento_PageBuilder/js/form/components/action-button" template="Magento_PageBuilder/form/components/dynamic-rows/actions">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="insertFormProvider" xsi:type="string">index = featured_products_tab_insert_form</item>
                            <item name="modalProvider" xsi:type="string">index = featured_products_tab_modal</item>
                            <item name="noClickEdit" xsi:type="boolean">true</item>
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="array">
                                    <item name="targetName" xsi:type="string">${ $.name }</item>
                                    <item name="actionName" xsi:type="string">edit</item>
                                    <item name="label" xsi:type="string" translate="true">Edit</item>
                                </item>
                                <item name="1" xsi:type="array">
                                    <item name="targetName" xsi:type="string">${ $.name }</item>
                                    <item name="actionName" xsi:type="string">deleteRecord</item>
                                    <item name="label" xsi:type="string" translate="true">Delete</item>
                                </item>
                            </item>
                            <item name="label" translate="true" xsi:type="string">Select</item>
                        </item>
                    </argument>
                </button>
            </container>
        </dynamicRows>
    </fieldset>
    <fieldset name="slider_configurations" sortOrder="30">
        <settings>
            <label translate="true">Slider Configurations</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="slider_infinitive" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">false</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Infinitive</label>
                <dataType>boolean</dataType>
                <dataScope>slider_infinitive</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="slider_show_pagination" sortOrder="20" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">true</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Show Pagination</label>
                <dataType>boolean</dataType>
                <dataScope>slider_show_pagination</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="slider_pagination_type_progressbar" sortOrder="30" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">false</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Pagination as progress bar</label>
                <dataType>boolean</dataType>
                <dataScope>slider_pagination_type_progressbar</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="slider_show_arrows" sortOrder="40" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">true</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Show arrows</label>
                <dataType>boolean</dataType>
                <dataScope>slider_show_arrows</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">false</map>
                            <map name="true" xsi:type="string">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
