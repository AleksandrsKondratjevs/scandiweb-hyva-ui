<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="scandiweb_featured_block" label="Featured block" menu_section="scandiweb_components" component="Magento_PageBuilder/js/content-type" preview_component="Magento_PageBuilder/js/content-type/preview" master_component="Magento_PageBuilder/js/content-type/master" form="pagebuilder_scandiweb_featured_block_form" sortOrder="0" translate="label">
        <children default_policy="deny" />
        <parents default_policy="deny">
            <parent name="row" policy="allow" />
            <parent name="column" policy="allow" />
        </parents>
        <appearances>
            <appearance name="default" default="true" preview_template="Scandiweb_ContentTypes/content-type/featured-block/default/preview" master_template="Scandiweb_ContentTypes/content-type/featured-block/default/master" reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>
                    <element name="main">
                        <style name="text_align" source="text_align" />
                        <style name="border" source="border_style" converter="Magento_PageBuilder/js/converter/style/border-style" />
                        <style name="border_color" source="border_color" />
                        <style name="background_color" source="background_color" />
                        <style name="background_image" source="background_image" converter="Magento_PageBuilder/js/converter/style/background-image" preview_converter="Magento_PageBuilder/js/converter/style/preview/background-image" />
                        <style name="border_width" source="border_width" converter="Magento_PageBuilder/js/converter/style/border-width" />
                        <style name="border_radius" source="border_radius" converter="Magento_PageBuilder/js/converter/style/remove-px" />
                        <style name="margins" storage_key="margins_and_padding" reader="Magento_PageBuilder/js/property/margins" converter="Magento_PageBuilder/js/converter/style/margins" />
                        <style name="padding" storage_key="margins_and_padding" reader="Magento_PageBuilder/js/property/paddings" converter="Magento_PageBuilder/js/converter/style/paddings" />
                        <style name="display" source="display" converter="Magento_PageBuilder/js/converter/style/display" preview_converter="Magento_PageBuilder/js/converter/style/preview/display" />
                        <css name="css_classes" />
                        <attribute name="name" source="data-content-type" />
                        <attribute name="appearance" source="data-appearance" />
                        <attribute name="content_title" source="content_title"/>
                        <attribute name="content_description" source="content_description"/>
                        <attribute name="show_first_cta" source="show_first_cta"/>
                        <attribute name="first_cta_text" source="first_cta_text"/>
                        <attribute name="first_cta_link" source="first_cta_link" />
                        <attribute name="first_cta_type" source="first_cta_type"/>
                        <attribute name="show_second_cta" source="show_second_cta"/>
                        <attribute name="second_cta_text" source="second_cta_text"/>
                        <attribute name="second_cta_link" source="second_cta_link" />
                        <attribute name="second_cta_type" source="second_cta_type"/>
                        <attribute name="visual_content_position" source="visual_content_position" />
                        <attribute name="visual_content_img" source="src" converter="Magento_PageBuilder/js/converter/attribute/src" preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                    </element>
                    <element name="block_directive">
                        <html name="block_directive" converter="Magento_PageBuilder/js/converter/html/tag-escaper" />
                    </element>
                </elements>
                <converters>
                    <converter component="Scandiweb_ContentTypes/js/content-type/featured-block/block-directive" name="block_directive">
                        <config>
                            <item name="html_variable" value="block_directive"/>
                            <item name="block_class" value="Scandiweb\ContentTypes\Block\ContentTypes\FeaturedBlock"/>
                        </config>
                    </converter>
                </converters>
            </appearance>
        </appearances>
    </type>
</config>